/* === GAYA BARU UNTUK KONSEP 1: WIZARD CERDAS === */
.settings-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 40px;
}

.main-settings h4,
.contextual-settings h4 {
  text-align: left;
  margin-top: 0;
  margin-bottom: 15px;
  color: var(--dark-text);
  border-bottom: 2px solid var(--primary-color);
  padding-bottom: 8px;
}

.contextual-settings h4 {
  border-bottom: 2px solid var(--secondary-color);
}

.form-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 18px;
}

.form-row label {
  font-weight: 600;
  margin-bottom: 6px;
  font-size: 0.9em;
  color: #495057;
}

.form-row select {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #ccc;
  background: white;
  font-family: 'Poppins', sans-serif;
}

.form-row select:focus {
  border-color: var(--primary-color);
  outline: none;
  box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
}

#tarifFilterValuesContainer {
  max-height: 200px;
  overflow-y: auto;
  background: white;
  padding: 15px;
  border-radius: 8px;
  border: 1px solid #ccc;
  text-align: left;
}

#tarifFilterValuesContainer div,
#tarifClassMappingForm .form-row {
  margin-bottom: 10px;
}

#tarifClassMappingForm {
  max-height: 250px;
  overflow-y: auto;
  padding-right: 10px;
}

/* === GAYA BARU UNTUK KONSEP 2: DASBOR HASIL === */
.report-dashboard {
  text-align: center;
  padding: 30px;
  border: 1px solid var(--border-color);
  border-radius: 12px;
  background: #fdfdfd;
}

.report-dashboard .report-icon {
  font-size: 3em;
  margin-bottom: 15px;
}

.report-dashboard .report-icon.success {
  color: var(--success-color);
}

.report-dashboard h3 {
  margin: 0 0 10px 0;
  color: var(--dark-text);
}

.report-dashboard p {
  margin: 0 0 25px 0;
  color: var(--secondary-color);
}

.download-actions {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-bottom: 25px;
}

.download-actions .btn {
  font-size: 1em;
  padding: 12px 20px;
}

.download-actions .btn-primary {
  background-color: #0d6efd;
}

.download-actions .btn-danger {
  background-color: #dc3545;
}

.secondary-actions {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 20px;
}

.btn-link {
  background: none;
  border: none;
  color: var(--primary-color);
  cursor: pointer;
  font-size: 0.9em;
  font-weight: 500;
  text-decoration: underline;
  padding: 5px;
}

.btn-link:hover {
  color: #0056b3;
}

.report-dashboard hr {
  border: 0;
  height: 1px;
  background: var(--border-color);
  margin: 20px 0;
}

/* === GAYA BARU UNTUK MODAL (POP-UP) === */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
}

.modal-overlay.active {
  opacity: 1;
}

.modal-content {
  background: white;
  padding: 25px;
  border-radius: 12px;
  width: 90%;
  max-width: 800px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
  transform: scale(0.95);
  transition: transform 0.2s ease-in-out;
}

.modal-overlay.active .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 15px;
  margin-bottom: 20px;
}

.modal-header h3 {
  margin: 0;
  text-align: left;
  color: var(--dark-text);
}

.modal-close-btn {
  background: none;
  border: none;
  font-size: 2em;
  cursor: pointer;
  color: #aaa;
  line-height: 1;
}

.modal-close-btn:hover {
  color: var(--dark-text);
}

/* Gaya lain-lain yang mungkin diperlukan dari file asli */
.mapping-row {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.mapping-row label {
  flex-basis: 40%;
  text-align: right;
  margin-right: 15px;
  font-weight: bold;
  font-size: 0.9em;
}

.mapping-row select {
  flex-grow: 1;
  padding: 8px;
  border-radius: 5px;
  border: 1px solid #ccc;
}

.comparison-summary {
  background: #e7f3ff;
  padding: 15px;
  border-radius: 8px;
  margin: 15px 0;
}

.comparison-summary h5 {
  margin-top: 0;
  color: var(--primary-color);
}

/* === Gaya untuk Konstruktor Laporan === */
.mapping-container {
  max-height: 400px;
  overflow-y: auto;
  border: 1px solid var(--border-color);
  border-radius: 8px;
  background: #fff;
}

.mapping-header,
.mapping-row-item {
  display: grid;
  grid-template-columns: 1fr 1fr 50px;
  gap: 15px;
  padding: 10px 15px;
  align-items: center;
}

.mapping-header {
  font-weight: 600;
  font-size: 0.8em;
  color: #6c757d;
  background: var(--light-bg);
  border-bottom: 1px solid var(--border-color);
  position: sticky;
  top: 0;
}

.mapping-row-item {
  border-bottom: 1px solid #f0f0f0;
}

.mapping-row-item:last-child {
  border-bottom: none;
}

.mapping-row-item input,
.mapping-row-item select {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.btn-delete-mapping {
  background: none;
  border: none;
  color: var(--danger-color);
  cursor: pointer;
  font-size: 1.2em;
  padding: 5px;
  border-radius: 50%;
  width: 32px;
  height: 32px;
}

.btn-delete-mapping:hover {
  background: #f8d7da;
}

.form-hint {
  font-size: 0.8em;
  color: #6c757d;
  margin: 5px 0 0 0;
}

.empty-state {
  text-align: center;
  color: #6c757d;
  padding: 40px 20px;
}

.btn.btn-primary {
  background-color: var(--primary-color);
}

/* === Gaya BARU untuk Tombol Impor === */
.import-section {
  margin-bottom: 15px;
  padding-bottom: 15px;
  border-bottom: 1px solid var(--border-color);
  text-align: right;
}

.import-section .btn-link {
  font-weight: 600;
}

/* === Gaya BARU untuk Searchable Dropdown === */
.searchable-dropdown {
  position: relative;
  width: 100%;
}

.search-input {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  /* Pastikan padding tidak menambah lebar */
}

.dropdown-options {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  width: 100%;
  max-height: 200px;
  overflow-y: auto;
  background: #fff;
  border: 1px solid #ccc;
  border-top: none;
  border-radius: 0 0 5px 5px;
  z-index: 10;
}

.searchable-dropdown.open .dropdown-options {
  display: block;
}

.option {
  padding: 8px 12px;
  cursor: pointer;
  font-size: 0.9em;
}

.option:hover {
  background: var(--light-bg);
}

.rc-top-panel {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 20px;
  padding: 15px 20px;
  background: var(--light-bg);
  border-bottom: 1px solid var(--border-color);
}

.setting-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.setting-item label {
  font-weight: 600;
  font-size: 0.9em;
  color: #495057;
}

.setting-item select {
  padding: 6px 10px;
  border-radius: 6px;
  border: 1px solid #ccc;
  background: white;
}

.rc-workspace {
  padding: 20px;
}

.mapping-toolbar {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin-bottom: 15px;
  padding-bottom: 15px;
  border-bottom: 1px solid var(--border-color);
}

.rc-footer-actions {
  text-align: center;
  padding: 20px;
  border-top: 1px solid var(--border-color);
  background: var(--light-bg);
}

.btn-danger {
  background-color: var(--danger-color);
  color: white;
}

.btn-danger:hover {
  background-color: #c82333;
}

.mapping-toolbar .btn-link {
  margin-right: auto;
  /* Dorong tombol lain ke kanan */
}